<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.silverservers.app.DashboardActivity">

    <TextView
        android:id="@+id/textView_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Logged in as PersonA"
        android:textColor="@color/foreground"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_dashboard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Session Status:"
            android:textColor="@color/foreground"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_dashboard3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="@color/primary"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView_dashboard6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="Geofence Status"
        android:textColor="@color/foreground"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_dashboard7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inside SS Fence"
        android:textColor="@color/primary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_dashboard4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:text="Last Updated Location"
        android:textColor="@color/foreground"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_dashboard5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.2345, 5.6789"
        android:textColor="@color/primary"
        android:textSize="24sp" />

</LinearLayout>