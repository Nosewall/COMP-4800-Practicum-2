<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.silverservers.app.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="12sp">

        <TextView
            android:id="@+id/textView_dash_loggedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="@string/dashboard_logged_in"
            android:textColor="@color/foreground"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_dash_serviceStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Location Service:"
                android:textColor="@color/foreground"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView_dash_serviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/foreground"
                android:textSize="24sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_dash_geoStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:text="Geofence Status"
            android:textColor="@color/foreground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_dash_locationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foreground"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_dash_locationStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:text="Last Updated Location"
            android:textColor="@color/foreground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_dash_geoStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/foreground"
            android:textSize="24sp" />

    </LinearLayout>

</LinearLayout>