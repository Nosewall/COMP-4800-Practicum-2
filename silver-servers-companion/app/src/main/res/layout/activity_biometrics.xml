<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.silverservers.app.DashboardActivity">

    <TextView
        android:id="@+id/textview_biometrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="14sp"
        android:text="@string/textview_biometric_prompt"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="vertical"></LinearLayout>

    <ImageView
        android:id="@+id/imageView_biometrics"
        android:layout_width="140dp"
        android:layout_height="124dp"
        app:srcCompat="@drawable/ic_fingerprint_purple" />

</LinearLayout>