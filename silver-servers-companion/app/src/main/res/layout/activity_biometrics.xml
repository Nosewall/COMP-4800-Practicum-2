<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.silverservers.app.DashboardActivity">

    <TextView
        android:id="@+id/textview_biometrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_biometric_prompt"
        android:textAlignment="center"
        android:textColor="@color/foreground"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView_biometrics"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_margin="16sp"
        app:srcCompat="@drawable/ic_fingerprint_purple" />

</LinearLayout>